{
  "compilerOptions": {
    "noEmit": true,
    "jsx": "react",
    "target": "es5",
    "types": [
      "react",
      "node",
      "react-dom",
      "jest"
    ],
    "lib": ["dom", "es2015", "DOM.Iterable"],
    "module": "esnext",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "removeComments": true,
    "rootDir": "./",
    "baseUrl": "./",
    "paths": {
      "*": ["node_modules", "src"]
    },
    "experimentalDecorators": true,
    "checkJs": false,
    "strictFunctionTypes": true,
    "downlevelIteration": true
  },
  "include": ["src"],
  "exclude": ["node_modules"]
}
